{% if widgetMenu %}
    <section class="menu-widget-holder">
        <div class="inner">
            <div class="menu-widget">
                <header>
                    <h3>{{ widgetMenu.title }}</h3>
                </header>
                <div class="bd content">
                    {{ widgetMenu.description|raw }}
                </div>
                <div class="price">
                    {{ widgetMenu.price|raw }}
                </div>
            </div>
        </div>
    </section>
{% endif %}
